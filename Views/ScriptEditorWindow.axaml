<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="swengine.desktop.Views.ScriptEditorWindow"
        Title="Edit Script" Width="500" Height="350">
    <StackPanel Margin="10">
        <TextBlock Text="Edit your script:" Margin="0,0,0,5"/>
        <TextBox Name="ScriptTextBox" AcceptsReturn="True" Height="220"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="SaveButton" Content="Save" Width="80" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="Cancel" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
